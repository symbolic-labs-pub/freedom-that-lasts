# Freedom That Lasts - Environment Configuration Example
# Copy this to .env and configure as needed

# Database configuration
FTL_DATABASE_PATH=ftl.db

# Safety policy overrides (optional)
# FTL_MAX_DELEGATION_TTL_DAYS=365
# FTL_DELEGATION_GINI_WARN=0.55
# FTL_DELEGATION_GINI_HALT=0.70

# Logging
FTL_LOG_LEVEL=INFO

# Development mode
FTL_DEBUG=false

# Monitoring (required for Grafana in docker-compose)
# IMPORTANT: Change this to a strong password before deploying!
GRAFANA_ADMIN_PASSWORD=ChangeMe_SecurePassword_2025
GRAFANA_ADMIN_USER=admin
